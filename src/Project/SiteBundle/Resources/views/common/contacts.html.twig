{% extends 'ProjectSiteBundle::base.html.twig' %}
{% block title %}Контакты - Moorooso{% endblock %}


{% block body %}
    {{ form_start(form, { 'action': path('ProjectSiteBundle_contacts'), 'method': 'POST'}) }}
    {{ form_errors(form) }}

    {{ form_row(form.fullname) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.email) }}

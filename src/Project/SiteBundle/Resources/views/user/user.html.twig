{% extends 'ProjectSiteBundle::base.html.twig' %}
{% block title %}Пользователи - Moorooso{% endblock%}

{% block body %}
 <div class="table_country">
  <a href="/moorooso/administrator/user/create" class="button">Добавить пользователя</a>
   {% if not users is empty %}
      <h2>Пользователи</h2>
       <table>
           <thead>
               <tr>
                   <th>Логин</th>
                   <th>Роль</th>
                   <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{user.username}}</td>
                        <td>{{user.role.display}}</td>
                        <td><a href="/moorooso/administrator/user/{{user.id}}" class="button">Узнать больше</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    </div>
{% endblock %}

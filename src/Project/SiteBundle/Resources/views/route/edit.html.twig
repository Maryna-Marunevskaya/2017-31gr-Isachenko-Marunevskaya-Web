{% extends 'ProjectSiteBundle::base.html.twig' %}
{% block title %}Редактирование маршрута - Moorooso{% endblock %}

{% block body %}
    {{ form_start(form, { 'action': path('ProjectSiteBundle_route_edit', { 'id' : route.id }), 'method': 'POST'}) }}
    {{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.shortdescription) }}
    {{ form_row(form.description) }}
    {{ form_row(form.image) }}
    {{ form_rest(form) }}
    <input type="submit" value="Сохранить" class="button"/>
{% endblock %}

{% extends 'ProjectSiteBundle::base.html.twig' %}
{% block title %}Создание маршрута - Moorooso{% endblock %}

{% block body %}
    {{ form_start(form, { 'action': path('ProjectSiteBundle_route_create'), 'method': 'POST'}) }}
    {{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.shortdescription) }}
    {{ form_row(form.description) }}
    {{ form_row(form.image) }}
    {{ form_rest(form) }}
    <input type="submit" value="Создать" class="button"/>
{% endblock %}
